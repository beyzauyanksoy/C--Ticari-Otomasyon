@using MvcTicariOtomasyon.Models.siniflar
@model List<satisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>

        </tr>
    </thead>

    @foreach (var k in Model)
    {

        <tr>
            <td>@k.Satisid</td>
            <td>@k.urun.UrunAd </td>
            <td>@k.cariler.CariAd @k.cariler.CariSoyad</td>
            <td>@k.personel.PersonelAd @k.personel.PersonelSoyad</td>
            <td>@k.Adet</td>
            <td>@k.Fiyat</td>
            <td>@k.ToplamTutar</td>
            <td>@k.Tarih</td>




            <td><a href="/satis/SatisGetir/@k.Satisid" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/satis/SatisDetay/@k.Satisid" class="btn btn-default" style="background-color: #8a77b1;color: white">Detaylar</a></td>
        </tr>

    }
</table>
<a href="/satis/YeniSatis" class="btn btn-info">Yeni Satış Yap</a>



<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>


<script>

    $('#tbl1').DataTable({

        "language": {

            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"

        }

    });

</script>








