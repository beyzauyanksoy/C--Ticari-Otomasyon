@using MvcTicariOtomasyon.Models.siniflar
@model List<personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">

    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
        
    </tr>
    @foreach (var k in Model)
    {

        <tr>
            <td>@k.Personelid</td>
            <td>@k.PersonelAd</td>
            <td>@k.PersonelSoyad</td>
            <td>
                <img src="@k.PersonelGorsel" alt="Alternate Text" style="width:150px; height:auto;" />
            </td>
            <td>@k.Departman.DepartmanAd</td>
            
            <td><a href="/personel/PersonelGetir/@k.Personelid" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/departman/DepartmanPersonelSatis/@k.Personelid" class="btn btn-default" style="background-color: #8a77b1;color: white">Detaylar</a></td>
        </tr>

    }
</table>
<a href="/personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>

