@using MvcTicariOtomasyon.Models.siniflar
@model  List<satisHareket>
@{
    ViewBag.Title = "MusteriSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Cari Adı:@ViewBag.cari</li>
</ol>
<table class="table table-condensed">
    <tr>
        <th>Satış İd</th>
        <th>Ürün</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>


    </tr>
    @foreach (var x in Model)
    {
        <tr>

            <td>@x.Satisid</td>
            <td>@x.urun.UrunAd</td>
            <td>@x.personel.PersonelAd @x.personel.PersonelSoyad</td>
            <td>@x.Fiyat</td>
            <td>@x.Adet</td>
            <td>@x.ToplamTutar</td>
            <td>@x.Tarih</td>
            <td><a href="#" class="btn btn-default" style="background-color: #33579c;color:white">Yazdır</a></td>

        </tr>

    }



</table>


