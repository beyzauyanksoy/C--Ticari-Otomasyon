@model MvcTicariOtomasyon.Models.siniflar.kategori

@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Kategori Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x=>x.KategoriAd) <!--html helper-->
    @Html.TextBoxFor(x=>x.KategoriAd, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form><!--içindeki degerler post oldugunda çalışacak-->
